<!-- 총 강의 수  -->
<select id="selectCountLect"  resultType="int">
select count(*)
from lecture
<!-- where inst_id=#{inst_id} -->
</select>

<!-- 평점 -->
<select id="selectScoreReview"  resultType="int">
select score
from review r
join lecture l
on r.lect_id=l.lect_id
where inst_id='inst1'
</select>

